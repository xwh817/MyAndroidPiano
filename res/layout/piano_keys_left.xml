<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout 
        android:id="@+id/ll_keys_white"
        android:layout_width="match_parent"
    	android:layout_height="match_parent">
        
        <xwh.music.piano.MyKey 
            android:id="@+id/key_white_a"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="@drawable/key_white_up"
            />
        <xwh.music.piano.MyKey 
            android:id="@+id/key_white_b"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="@drawable/key_white_up"
            />      
        
    </LinearLayout>

    
    <LinearLayout 
        android:id="@+id/ll_keys_black"
        android:layout_width="match_parent"
    	android:layout_height="match_parent">        
       
        <xwh.music.piano.MyKey 
            android:id="@+id/key_black_a"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="@drawable/key_black_up"   		
    		android:layout_marginLeft="24dp"
            />
      
    </LinearLayout>
    
    
    
</FrameLayout>
